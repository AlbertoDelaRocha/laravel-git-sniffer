{
    "name": "avirdz/laravel-git-sniffer",
    "description": "An artisan command to check your code standards via pre-commit git hook.",
    "keywords": ["laravel", "codesniffer", "phpcs", "git", "pre-commit", "hook"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jesus Aviles",
            "email": "avirdz@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "illuminate/console": "5.0.x|5.1.x|5.2.x",
        "squizlabs/php_codesniffer": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Avirdz\\LaravelGitSniffer\\": "src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"@mkdir('.git/hooks')\"",
            "php -r \"copy('vendor/avirdz/laravel-git-sniffer/resources/pre-commit', '.git/hooks/pre-commit')\""
        ],
        "post-update-cmd": [
            "php -r \"@mkdir('.git/hooks')\"",
            "php -r \"copy('vendor/avirdz/laravel-git-sniffer/resources/pre-commit', '.git/hooks/pre-commit')\""
        ]
    }
}
